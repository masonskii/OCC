from typing import List

from fastapi import FastAPI, HTTPException
from pydantic import BaseModel
from pymongo import MongoClient

# Connect to MongoDB
client = MongoClient("mongodb://localhost:27017/")
db = client["OCE"]
collection = db["OCE"]


# Define data model
class User(BaseModel):
    name: str
    age: int
    email: str


app = FastAPI()


# POST endpoint to add an item to the database
@app.post("/items/", response_model=User)
async def create_item(user: User):
    result = collection.insert_one(user.dict())
    return {**user.dict(), "_id": str(result.inserted_id)}


# GET endpoint to retrieve all items from the database
@app.get("/items/", response_model=List[User])
async def get_all_items():
    items = []
    for item in collection.find():
        items.append(User(**item))
    return items


# GET endpoint to retrieve a single item by ID
@app.get("/items/{item_id}", response_model=User)
async def get_item(item_id: str):
    item = collection.find_one({"_id": item_id})
    if item is None:
        raise HTTPException(status_code=404, detail="Item not found")
    return item
